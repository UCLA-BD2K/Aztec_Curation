<div ng-controller="MainCtrl" class="container">
    <div class="login-modals">
        <ul class="nav navbar-nav navbar-right">
            <li> <a ng-click="toggleModal()" id="login-btn" class="navbar-nav pull-right"><span class="ion-person" id="login"></span>Login</a> </li>
            <li id="hide-signup"> <a href="/home/signup" id="login-btn" class="navbar-nav pull-right"><span class="ion-person-add" id="signup"></span>Signup</a> </li>
        </ul>


    <modal title="Login" visible="showModal">
     <form id="login-form" data-toggle="validator" role="form">
       <div id="login-message-div" style="text-align:center">
         <span id="login-message" style="color:red"></span>
       </div>
        <div class="form-group" id="email-form">
          <label for="email">Email address</label>
          <input type="email" class="form-control" id="email" placeholder="Enter email" required>
          <div class="help-block with-errors"></div>
        </div>
        <div class="form-group" id="pass-form">
          <label for="password">Password</label>
          <input type="password" class="form-control" data-minlength="6" id="password" placeholder="Password" required>
          <div class="help-block with-errors"></div>
        </div>
        <button type="submit" class="btn btn-default" id="submit-btn">Submit</button>
        </form>
        <div class="modal-footer">
          <h4 id="modal-h4"> Dont have an account yet? <a ng-click="toggleSignup()">Signup</a></h4>
        </div>
    </modal>
    </div>
  <modal title="Signup" visible="showSignUp">
     <form id="signup-form" data-toggle="validator" role="form">
         <div id="signup-message-div" style="text-align:center">
           <span id="signup-message" style="color:red"></span>
         </div>
            <!-- First Name -->
           <div class="form-group" id="name-form">
          <label for="firstname">First Name</label>
          <input type="text" class="form-control" id="s_firstname" placeholder="First Name" required>
          <div class="help-block with-errors"></div>
          </div>
            <!-- Last Name -->
           <div class="form-group" id="name-form">
          <label for="lastname">Last Name</label>
          <input type="text" class="form-control" id="s_lastname" placeholder="Last Name" required>
          <div class="help-block with-errors"></div>
          </div>
          <!-- Job Title -->
           <div class="form-group" id="name-form">
          <label for="jobtitle">Job Title</label>
          <input type="text" class="form-control" id="s_position" placeholder="What's your role in the lab?" />
          </div>

           <!-- Email/Password -->
          <div class="form-group" id="email-form">
          <label for="email">Email address</label>
          <input type="email" class="form-control" data-error="The email address is invalid" id="s_email" placeholder="Enter email" required>
          <div class="help-block with-errors"></div>
        </div>
        <div class="form-group" id="pass-form">
          <label for="password">Password</label>
          <input type="password" class="form-control" id="s_password" data-minlength="6" data-error="Minimum of 6 characters" placeholder="Password" required>
          <div class="help-block with-errors"></div>
        </div>
         <div class="form-group" id="pass-form">
          <label for="password">Re-enter Password</label>
          <input type="password" class="form-control" id="s_confirm-password" data-match="#s_password" data-match-error="Whoops, these don't match" placeholder="Password" required>
          <div class="help-block with-errors"></div>
        </div>


        <button type="submit" class="btn btn-default" id="create-AC-btn">Create Account</button>
        </form>
    </modal>
  </div>
